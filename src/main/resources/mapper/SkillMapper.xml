<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accenture.staffmanagement.dao.SkillDao">
    <resultMap id="BaseResultMap" type="com.accenture.staffmanagement.entity.Skill">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="category" jdbcType="VARCHAR" property="category" />
        <result column="parentid" jdbcType="BIGINT" property="parentId" />
    </resultMap>
    <sql id="Base_Column_List">
        id, name, category, parentid
    </sql>
    <!--  通过ID获取用户信息-->
    <select id="getSkill" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from skill limit #{page},#{size}
    </select>
    <select id="count" resultType="long">
        select count(1) from skill
    </select>
</mapper>